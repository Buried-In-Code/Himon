root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.bat]
indent_style = tab

[*.cs]
indent_size = 4
indent_style = tab
insert_final_newline = false

[*.java]
indent_size = 4
indent_style = tab
insert_final_newline = false

[*.json]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[{*.xml,*.xsd}]
indent_size = 4
indent_style = tab
insert_final_newline = false

[{*.yaml,*.yml}]
indent_style = tab
